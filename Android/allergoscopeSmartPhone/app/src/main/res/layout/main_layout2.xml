<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_dark"
    tools:context=".MenuActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:background="@color/colorMainIcons"
            android:foregroundGravity="center_vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <com.allergoscope.app.timer.TimerButton

                android:id="@+id/idTimer"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="16dp"
                android:background="#00FFFFFF"
                android:contentDescription="@string/dummy_button"
                android:scaleType="fitCenter"
                app:color_up="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/timer"
                tools:ignore="SpeakableTextPresentCheck" />


            <lib.common.button.CMenuButton
                android:id="@+id/idSettings"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginRight="60dp"
                android:background="#00FFFFFF"
                android:contentDescription="@string/dummy_button"
                android:scaleType="fitCenter"
                app:color_up="@color/white"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="@+id/idTimer"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/settings"
                tools:ignore="SpeakableTextPresentCheck" />
            <lib.common.button.CMenuButton
                android:id="@+id/idLang"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginRight="60dp"
                android:background="#00FFFFFF"
                android:contentDescription="@string/dummy_button"
                android:scaleType="fitCenter"
                app:color_up="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="@+id/idSettings"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/language"
                tools:ignore="SpeakableTextPresentCheck" />

            <lib.common.CCheckBox
                android:id="@+id/idChecBox"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginRight="60dp"
                android:background="#00FFFFFF"
                android:text="@string/prick"
                android:contentDescription="@string/dummy_button"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="@+id/idLang"
                app:layout_constraintTop_toTopOf="parent" />


            <ImageView
                android:id="@+id/imageView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:scaleType="fitCenter"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/view" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:fontFamily="sans-serif-black"
                android:lineSpacingExtra="8sp"
                android:text="@string/app_name"
                android:textAllCaps="false"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="#FFFFFF"
                android:textSize="36sp"
                android:textStyle="bold"
                android:typeface="normal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageView"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:id="@+id/textVersion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:fontFamily="sans-serif-black"
                android:lineSpacingExtra="8sp"
                android:text="@string/app_name"
                android:textAllCaps="false"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                android:typeface="normal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    <TableLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_max="360dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
        app:layout_constraintWidth_max="540dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <lib.common.layout.LayoutButton
                android:id="@+id/homeNew"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/templ_background"
                android:elevation="3dp"
                android:orientation="vertical"
                app:childs_color_down="@android:color/transparent"
                >

                <lib.common.button.CMenuButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@+id/homeNew"
                    android:layout_weight="1"
                    android:layout_margin="10dp"


                    android:adjustViewBounds="true"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter"
                    app:color_disable="@color/transparent"
                    app:color_up="@color/transparent"
                    app:icon_disable="@drawable/id_card_pressed"
                    app:icon_push="@drawable/id_card_pressed"
                    app:icon_pop="@drawable/id_card" />


                <TextView
                    android:id="@+id/homeNewString"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/card_info"
                    android:textColor="@android:color/background_light"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:layout_alignParentBottom="true"/>
            </lib.common.layout.LayoutButton>


            <lib.common.layout.LayoutButton
                android:id="@+id/homeLoad"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/templ_background"
                android:elevation="3dp"
                android:orientation="vertical"
                app:childs_color_down="@android:color/transparent"
                >

                <lib.common.button.CMenuButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@id/homeLoad"
                    android:layout_weight="1"
                    android:layout_margin="10dp"


                    android:adjustViewBounds="true"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter"
                    app:color_disable="@color/transparent"
                    app:color_up="@color/transparent"
                    app:icon_disable="@drawable/opendesign_pressed"
                    app:icon_push="@drawable/opendesign_pressed"
                    app:icon_pop="@drawable/opendesign" />

                <TextView
                    android:id="@+id/homeLoadString"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/load_card"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:textColor="@android:color/background_light"
                    android:layout_alignParentBottom="true"/>

            </lib.common.layout.LayoutButton>

            <lib.common.layout.LayoutButton
                android:id="@+id/homeSync"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/templ_background"
                app:childs_color_down="@android:color/transparent"

                android:elevation="3dp"
                android:orientation="vertical">

                <lib.common.button.CMenuButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@id/homeSync"
                    android:layout_margin="10dp"
                    android:layout_weight="1"


                    android:adjustViewBounds="true"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter"
                    app:color_disable="@color/transparent"
                    app:color_up="@color/transparent"
                    app:icon_disable="@drawable/backup_to_pc_pressed"
                    app:icon_push="@drawable/backup_to_pc_pressed"
                    app:icon_pop="@drawable/backup_to_pc" />


                <TextView
                    android:id="@+id/homeSyncString"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center"
                    android:text="@string/card_cync"
                    android:textColor="@android:color/background_light"
                    android:textAlignment="center" />

            </lib.common.layout.LayoutButton>
            <lib.common.layout.LayoutButton
                android:id="@+id/homeExit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/templ_background"
                app:childs_color_down="@android:color/transparent"

                android:elevation="3dp"
                android:orientation="vertical">

                <lib.common.button.CMenuButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@id/homeExit"
                    android:layout_margin="10dp"
                    android:layout_weight="1"


                    android:adjustViewBounds="true"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter"
                    app:color_disable="@color/transparent"
                    app:color_up="@color/transparent"
                    app:icon_disable="@drawable/ic_menu_reset"
                    app:icon_push="@drawable/ic_menu_reset_pressed"
                    app:icon_pop="@drawable/ic_menu_reset" />




                <TextView
                    android:id="@+id/homeExitString"
                    android:text="@string/exit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center"
                    android:textColor="@android:color/background_light"
                    android:textAlignment="center" />

            </lib.common.layout.LayoutButton>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

        </TableRow>

    </TableLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>



    <lib.common.layout.CPanelDialog
        android:id="@+id/dialogContainer"
        android:visibility="gone"
        app:drag_orient="Top"
        app:size_hand="0dp"
        android:gravity="start"
        android:fitsSystemWindows="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </lib.common.layout.CPanelDialog>

    <lib.common.layout.CPanelDialog
        android:id="@+id/dialogContainer2"
        android:visibility="gone"
        app:drag_orient="Top"
        app:size_hand="0dp"
        android:gravity="start"
        android:fitsSystemWindows="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </lib.common.layout.CPanelDialog>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
