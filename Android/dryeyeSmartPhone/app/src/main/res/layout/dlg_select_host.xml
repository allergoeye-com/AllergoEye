<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/theme_dlg_background"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/idCaption"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/theme_bar_color"
                android:gravity="center"
                android:singleLine="true"
                android:text="Select Host"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/theme_dlg_text_color" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/iPanel"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.65">

            <include
                android:id="@+id/exploreWiFi"
                layout="@layout/content_dlg_select_host_explore" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="end"
            android:orientation="horizontal"
            android:layout_weight="0.25"
            android:paddingRight="20dp"

            android:visibility="visible">


            <lib.common.button.CMenuButton

                android:id="@+id/idOk"
                android:layout_gravity="center_vertical"
                style="@style/Widget.AppCompat.ImageButton"
                android:layout_width="@dimen/generic_button_height"
                android:layout_height="@dimen/generic_button_height"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:src="@drawable/connect" />

            <Space
                android:layout_width="30dp"
                android:layout_height="match_parent" />

            <lib.common.button.CMenuButton
                android:id="@+id/idCancel"
                android:layout_gravity="center_vertical"
                style="@style/Widget.AppCompat.ImageButton"
                android:layout_width="@dimen/generic_button_height"
                android:layout_height="@dimen/generic_button_height"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:src="@drawable/cancel_onscreen" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
